{
  "manifest_version": 3,
  "name": "Gistify â€“ AI Web Summarizer",
  "version": "1.1.0",
  "description": "Instantly generate summaries of any webpage. Get the key points without the scroll struggle. Save time, stay smart.",
"permissions": [
  "contextMenus",
  "scripting",
  "activeTab",
  "storage"
],
  "host_permissions": ["<all_urls>"],
